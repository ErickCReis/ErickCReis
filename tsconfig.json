{
  "include": ["**/*", "./.astro/types.d.ts"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "paths": {
      "@web/*": ["./web/*"],
      "@server/*": ["./server/*"],
      "@shared/*": ["./shared/*"],
      "@scripts/*": ["./scripts/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["bun"]
  }
}
