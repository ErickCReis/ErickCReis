{
  "include": ["src/**/*", "build.ts", "bunPreload.ts", "content-sync.ts", "content.config.ts"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "content/*": ["./.content/*"]
    },
    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "jsxFactory": "h",
    "types": ["bun"]
  }
}
