    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "elysia": "^1.4.25",
    "fuma-content": "^1.1.5",
    "solid-js": "^1.9.11",
    "tailwind-merge": "^3.5.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@dschz/bun-plugin-solid": "^1.0.4",
    "@types/bun": "^1.3.9",
    "bun-plugin-tailwind": "^0.1.2",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.9.3"
  }
