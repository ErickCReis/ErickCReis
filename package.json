{
  "name": "erickcreis",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bun run --parallel dev:astro dev:api",
    "dev:astro": "bun --bun astro dev --host",
    "dev:api": "bun --watch src/server/index.ts",
    "codex:sync": "bun scripts/codex-sync.ts",
    "lint": "oxlint --fix --type-aware && oxfmt && tsgo --noEmit && astro check",
    "build": "bun --bun astro build",
    "start": "NODE_ENV=production bun src/server/index.ts"
  },
  "dependencies": {
    "@astrojs/mdx": "5.0.0-beta.9",
    "@astrojs/solid-js": "6.0.0-beta.2",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/eden": "^1.4.8",
    "@elysiajs/static": "^1.4.7",
    "@solid-primitives/mouse": "^2.1.6",
    "@solid-primitives/scheduled": "^1.5.3",
    "@solid-primitives/tween": "^1.4.1",
    "astro": "6.0.0-beta.17",
    "clsx": "^2.1.1",
    "elysia": "^1.4.26",
    "solid-js": "^1.9.11",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.7-beta.1",
    "@tailwindcss/vite": "^4.2.1",
    "@types/bun": "^1.3.9",
    "@typescript/native-preview": "7.0.0-dev.20260227.1",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.15.0",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.9.3",
    "vite": "8.0.0-beta.16"
  },
  "overrides": {
    "vite": "8.0.0-beta.16"
  }
}
