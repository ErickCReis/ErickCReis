---
export const prerender = true;

import { getCollection } from "astro:content";
import ContentPage from "@/features/content/content-page";
import type { CollectionEntry } from "astro:content";
import type { BlogPost } from "@/features/content/components/post-list";
import "../styles/site.css";

const entries = await getCollection("blog");
const posts: BlogPost[] = entries
  .map((entry: CollectionEntry<"blog">) => ({
    slug: entry.id.replace(/\.(md|mdx)$/i, ""),
    title: entry.data.title,
    description: entry.data.description,
    date: new Date(entry.data.date).toISOString().slice(0, 10),
  }))
  .sort((a: BlogPost, b: BlogPost) => b.date.localeCompare(a.date));
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Content | Erick C. Reis</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <div id="app">
      <ContentPage posts={posts} client:only="solid-js" />
    </div>
  </body>
</html>
